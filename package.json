{
  "name": "@podcastindex/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for PodcastIndex.org API - search podcasts, episodes, trending, and more",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "podcastindex-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "build:ui": "INPUT=mcp-app.html vite build",
    "build:all": "tsc && INPUT=mcp-app.html vite build",
    "serve": "npx tsx src/app-server.ts",
    "serve:dev": "npm run build:all && npx tsx src/app-server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.6",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "podcast",
    "podcastindex",
    "model-context-protocol",
    "claude",
    "ai"
  ],
  "license": "MIT",
  "files": [
    "dist/**/*"
  ]
}
