{
  "name": "@podcastindex/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for PodcastIndex.org API - search podcasts, episodes, trending, and more",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "podcastindex-mcp": "./dist/index.js"
